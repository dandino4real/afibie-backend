{
  "compilerOptions": {
    "target": "es2016",                                

    /* Modules */
    "module": "commonjs",                           
    "rootDir": "./src",                                
    
    "typeRoots": ["./types", "./node_modules/@types"],                                
 
    "outDir": "./dist",                                   

    "esModuleInterop": true,                 

    "forceConsistentCasingInFileNames": true,           

    "strict": true,                                      
 
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*.ts", "types"
  ],
  "exclude": [
    "node_modules",
    // "dist",
    "test",
    "tests",
    "**/*.spec.ts"
  ],
  
}
